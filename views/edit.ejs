<% include ./partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">
        Edit <%=news.title%>
    </div>
    <form class="ui form" action="/admin/<%=news._id%>?_method=PUT" method="POST">
    <div class="field">
        <label>News title</label>
        <input type="text" name="title" value="<%=news.title%>">
    </div>
   
    <div class="field">
        <label>Banner</label>
        <input type="text" name="banner" value="<%=news.banner%>">
    </div>
   
    <div class="field">
        <label>News Text</label>
        <textarea rows="10" cols="40" name="text"><%=news.text%></textarea>
    </div>
    
    <br>
    <input class="ui blue inverted button" type="submit" name="" value="Update">
    </form>
</div>
<% include ./partials/footer %>
